generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [vector(schema: "extensions")]
}

model Document {
  id         String     @id @default(cuid())
  userId     String   // Clerk User ID
  orgId      String?  // Clerk Organization ID
  filename   String
  fileType   String
  fileSize   Int
  content    String     @db.Text
  status     String     @default("pending")
  
  uploadedAt DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  
  analyses   Analysis[]
  embeddings DecisionEmbedding[]

  @@index([userId])
  @@index([updatedAt]) // For sorting by recent
}

model Analysis {
  id           String         @id @default(cuid())
  documentId   String
  document     Document       @relation(fields: [documentId], references: [id], onDelete: Cascade)
  overallScore Float
  noiseScore   Float
  summary      String         @db.Text
  
  // New Agent Data Fields
  structuredContent String?      @db.Text
  speakers     String[]
  noiseStats   Json?          // Stores { mean, stdDev, variance }
  factCheck    Json?          // Stores { score, flags }
  compliance   Json?          // Stores { status, details }
  preMortem    Json?          // Stores { failureScenarios, preventiveMeasures }
  sentiment    Json?          // Stores { score, label }
  logicalAnalysis Json?       // Stores { score, fallacies }
  swotAnalysis    Json?       // Stores { strengths, weaknesses, opportunities, threats, advice }
  cognitiveAnalysis Json?     // Stores { blindSpotGap, blindSpots, counterArguments }
  
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  
  biases       BiasInstance[]

  @@index([documentId])
}

model BiasInstance {
  id          String   @id @default(cuid())
  analysisId  String
  analysis    Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)
  biasType    String
  severity    String
  excerpt     String   @db.Text
  explanation String   @db.Text
  suggestion  String   @db.Text
  confidence  Float?   @default(0.0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([analysisId])
}

model DecisionEmbedding {
  id String @id @default(cuid())
  documentId String
  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  content String @db.Text
  embedding Unsupported("vector(1536)")?
  metadata Json?

  @@index([documentId])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String   // Clerk User ID
  orgId     String?  // Clerk Organization ID
  action    String   // e.g. "EXPORT_PDF", "SCAN_DOCUMENT"
  resource  String   // e.g. "Document", "Analysis"
  resourceId String?
  details   Json?
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([orgId])
  @@index([action])
}


